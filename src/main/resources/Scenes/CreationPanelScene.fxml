         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Profile Creation: ">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="Insert name" />
            <TextField fx:id="profileNameTextField" maxWidth="200.0" />
