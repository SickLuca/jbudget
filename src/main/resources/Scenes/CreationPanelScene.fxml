                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="Insert name of category" />
            <TextField fx:id="categoryNameTextField" maxWidth="200.0" />
            <Label alignment="CENTER" text="Insert eventual parent" />
            <ComboBox fx:id="parentComboBox" maxWidth="200.0" />
            <Region prefHeight="20.0" />
            <Button fx:id="createNewCategoryButton" maxWidth="200.0" mnemonicParsing="false" text="Create new category" />
            <Region layoutX="30.0" layoutY="196.0" prefHeight="20.0" />
